<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/cell_item_next_icon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/cell_item_next_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="球币VIP会员"
        android:textColor="@color/main_text3"
        android:layout_toRightOf="@+id/cell_item_next_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/cell_item_next_to"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/next_to_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/cell_item_next_infor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="超多特权尊享"
        android:textColor="@color/main_color"
        android:layout_toLeftOf="@+id/cell_item_next_to"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:textSize="14sp"/>

</RelativeLayout>