<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/item_record_recom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订阅时间：2017-03-04  12:00:00"
            android:textColor="@color/main_text3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_record_recom_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="未完场"
            android:textColor="@color/main_color"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/item_record_recom_icon1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ball_red_icon" />

        <TextView
            android:id="@+id/item_record_recom_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/item_record_recom_icon1"
            android:text="单场"
            android:textColor="@color/main_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_record_recom_game_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/item_record_recom_type"
            android:text="周日033 意甲 03-12 22:00 开赛"
            android:textColor="@color/main_text9"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_record_recom_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="20球币"
            android:textColor="@color/main_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_record_recom_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp">

            <ImageView
                android:id="@+id/item_record_recom_team_icon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/default_team_logo_icon" />

            <TextView
                android:id="@+id/item_record_recom_team_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/item_record_recom_team_icon1"
                android:text="国际米兰"
                android:textColor="@color/main_text3"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="VS"
                android:textColor="@color/main_text9"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/item_record_recom_team_icon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/default_team_logo_icon" />

            <TextView
                android:id="@+id/item_record_recom_team_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/item_record_recom_team_icon2"
                android:text="亚特兰大"
                android:textColor="@color/main_text3"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_record_recom_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="精选过关串2串1，单选搞定"
            android:textColor="@color/main_text3"
            android:textSize="16sp" />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/item_record_recom_icon2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/information_icon" />

        <TextView
            android:id="@+id/item_record_recom_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/item_record_recom_count"
            android:layout_toRightOf="@+id/item_record_recom_icon2"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="下赛季欧冠的胜利就在今晚了。欢迎大家一起来赢得比赛"
            android:textColor="@color/main_text9"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_record_recom_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="13人订阅"
            android:textColor="@color/main_text9"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>