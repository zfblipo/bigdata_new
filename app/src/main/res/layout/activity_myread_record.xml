<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context="com.xingnext.bigdata.MyreadRecordActivity">

    <include
        android:id="@+id/myread_record_top"
        layout="@layout/cell_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_red_black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myread_record_guess"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="智能预测"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/myread_record_recomm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="红单推荐"
            android:textSize="15dp"
            android:textColor="@color/main_red_pink"
            android:gravity="center"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/myread_record_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
