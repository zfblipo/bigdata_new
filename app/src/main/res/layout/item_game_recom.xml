<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp" >

        <com.lipo.views.RoundedImageView
            android:id="@+id/item_game_recom_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="12dp"
            android:src="@color/black" />

        <TextView
            android:id="@+id/item_game_recom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_game_recom_head"
            android:text="足彩罗纳尔多"
            android:textColor="@color/main_text3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_game_recom_lab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_game_recom_head"
            android:layout_toRightOf="@+id/item_game_recom_head"
            android:background="@drawable/main_red_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="14连中"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_game_recom_lab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_game_recom_head"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/item_game_recom_lab1"
            android:background="@drawable/main_pink_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="10发10中"
            android:textColor="@color/main_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_game_recom_winrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="76%"
            android:textColor="@color/main_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_game_recom_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_game_recom_winrate"
            android:text="近21场胜率："
            android:textColor="@color/main_text6"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <ImageView
            android:id="@+id/item_game_recom_icon1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ball_red_icon" />

        <TextView
            android:id="@+id/item_game_recom_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/item_game_recom_icon1"
            android:text="单场"
            android:textColor="@color/main_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_game_recom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/item_game_recom_type"
            android:text=""
            android:textColor="@color/main_text9"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_game_recom_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="8球币"
            android:textColor="@color/main_color"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="21dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="21dp" >

        <ImageView
            android:id="@+id/item_game_recom_team_icon1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@color/black" />

        <TextView
            android:id="@+id/item_game_recom_team_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/item_game_recom_team_icon1"
            android:text="国际米兰"
            android:textColor="@color/main_text3"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="VS"
            android:textColor="@color/main_text9"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/item_game_recom_team_icon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@color/black" />

        <TextView
            android:id="@+id/item_game_recom_team_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/item_game_recom_team_icon2"
            android:text="亚特兰大"
            android:textColor="@color/main_text3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_game_recom_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="精选过关串2串1,单选搞定！"
            android:background="@color/white"
            android:textColor="@color/main_text3"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="12dp" >

        <ImageView
            android:id="@+id/item_game_recom_icon2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/information_icon" />

        <TextView
            android:id="@+id/item_game_recom_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toLeftOf="@+id/item_game_recom_count"
            android:layout_toRightOf="@+id/item_game_recom_icon2"
            android:text="下赛季欧冠的胜利就在今晚了。欢迎大家一起来赢得比赛"
            android:layout_marginRight="12dp"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/main_text9"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_game_recom_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="13人订阅"
            android:textColor="@color/main_text9"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>