<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/maina_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/main_color"/>

    <include
        android:id="@+id/main1_a_top"
        layout="@layout/cell_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/main1_a_plan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="比赛预测"
            android:textColor="@color/main_orange"
            android:textSize="15dp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/main_line2" />

        <TextView
            android:id="@+id/main1_a_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="历史战绩"
            android:textColor="@color/main_text3"
            android:textSize="15dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="1px"
        android:background="@color/main_line" />

    <View
        android:id="@+id/main1_a_line"
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:layout_marginTop="-2dp"
        android:background="@color/main_color" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/main1_a_frame_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/main_imgbtn_cell"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/top_bg"
            android:visibility="gone"></ImageButton>
    </FrameLayout>

</LinearLayout>