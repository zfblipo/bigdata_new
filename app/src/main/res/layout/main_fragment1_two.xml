<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/maina_two_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/main_color" />

    <include
        android:id="@+id/main1_two_top"
        layout="@layout/cell_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/maina_two_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/maina_two_item1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="竞彩足球"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/maina_two_item1_next"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/up_icon" />
            </LinearLayout>

            <ImageView
                android:id="@+id/maina_two_item1_icon"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-5dp"
                android:src="@mipmap/sanjiao_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/maina_two_item2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精选"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/maina_two_item2_icon"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-5dp"
                android:src="@mipmap/sanjiao_icon"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/maina_two_item3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/maina_two_item3_icon"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-5dp"
                android:src="@mipmap/sanjiao_icon"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/maina_two_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <View
            android:id="@+id/maina_two_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_black"
            android:visibility="gone"/>

        <GridView
            android:id="@+id/maina_two_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/white"
            android:numColumns="3"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:visibility="gone"/>

    </FrameLayout>
</LinearLayout>